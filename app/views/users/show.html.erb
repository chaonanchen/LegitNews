<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<p>
  <strong>Comments:</strong>
  <%= link_to @user.comments.count %>
</p>

<p>
  <strong>Article:</strong>
  <%= link_to @user.articles.count %>
</p>

<h1>Articles</h1>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>
  </thead>
  <tbody>
  <% @user.articles.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= link_to "Article", post %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h1>Comments</h1>
<table>
  <thead>
  <tr>
    <th>Message</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @user.comments.each do |post| %>
    <tr>
      <td><%= post.message %></td>
      <td><%= link_to "Comment", post %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
